ðŸ“ˆKey Performance Indicators (KPIs)

--Total revenue
SELECT SUM(price) AS total_revenue
  FROM coffee_sales;

--Total transactions
SELECT COUNT(*) AS total_transactions
FROM coffee_sales;

--Avg revenue per transactions
SELECT ROUND(AVG(price), 2) AS avg_revenue_per_sale
FROM coffee_sales;

--Revenue by coffee type
SELECT coffee_name, ROUND(SUM(price), 2) AS revenue
FROM coffee_sales
GROUP BY coffee_name
ORDER BY revenue DESC;

--Top 5 best-selling coffee items
SELECT coffee_name, COUNT(*) AS total_orders
FROM coffee_sales
GROUP BY coffee_name
ORDER BY total_orders DESC
LIMIT 5;

--Revenue by day of week
SELECT weekday, ROUND(SUM(price), 2) AS revenue
FROM coffee_sales
GROUP BY weekday
ORDER BY revenue DESC;

--Revenue by hour of day
SELECT hour_of_day, ROUND(SUM(price), 2) AS revenue
FROM coffee_sales
GROUP BY hour_of_day
ORDER BY hour_of_day;

--Revenue by Payment method
SELECT cash_type, ROUND(SUM(price), 2) AS revenue
FROM coffee_sales
GROUP BY cash_type
ORDER BY revenue DESC;

--Monthly revenue
SELECT month_name, ROUND(SUM(price), 2) AS revenue
FROM coffee_sales
GROUP BY month_name
ORDER BY revenue DESC;

--Peak sales day (Highest revenue day)
SELECT date, ROUND(SUM(price), 2) AS revenue
FROM coffee_sales
GROUP BY date
ORDER BY revenue DESC
LIMIT 1;
